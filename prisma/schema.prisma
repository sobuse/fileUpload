datasource db {
  provider = "postgresql"
  url      = env.DATABASE_URL
}

generator client {
  provider = "prisma-client-js"
}

model File {
  id          String   @id @default(cuid())
  name        String
  size        Int
  type        String
  url         String
  uploaderId  String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}